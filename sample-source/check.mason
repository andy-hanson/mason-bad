use .control for unless
use .error for try-catch

!. |condition explain
	unless condition |
		fail explain

\\\
fails. |do:Act
	that (throws? do)
	y-catch |
		do ()
		fail! "Expected to catch error"
	|
		()
\\\

!fails-with-message. |message:String do:Act
	!equals message (catch do).message

!rel. |rel:Fun[Any, Any] a b
	! rel a b
		"Expected {rel} {a} {b}"




