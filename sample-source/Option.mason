use .class
use .singleton
use .js-util for exists?

Option = class
	name. "Option"

	factory. |x
		case x
			exists? x
				Option.Some x
			else
				Option.None

	static. |Option
		Some. class
			construct. "short"
			name. "Some"
			super. Option
			members.
				value.

		None. singleton
			name. "None"
			super. Option

		force. |a:Option message
			case a
				:Some
					_.value
				= None
					`throw new Error((message == null) ? "Tried to force None" : explain)`
					()

Option
